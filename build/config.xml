<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fabrizio" version="1.0.0">
    <name short="PomoCdv">PomoCordova</name>
    <description>
        A multiplatform pomodoro application powered by Apache Cordova
    </description>
    <author email="fabriziofasanando2@gmail.es" href="https://github.com/fabriziofs">
        Fabrizio Fasanando
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
</widget>
